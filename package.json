{
  "name": "bookstand",
  "bin": "./cli.js",
  "scripts": {
    "start": "tsc --watch",
    "test": "jest"
  },
  "devDependencies": {
    "@types/cosmiconfig": "^5.0.3",
    "@types/jest": "^23.1.6",
    "jest": "^23.4.1",
    "prettier": "^1.13.7",
    "ts-jest": "^23.0.0",
    "typescript": "^2.9.2"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "watchPathIgnorePatterns": [
      "dist"
    ]
  },
  "dependencies": {
    "cosmiconfig": "^5.0.5",
    "rollup": "^0.62.0"
  },
  "license": "MIT"
}
